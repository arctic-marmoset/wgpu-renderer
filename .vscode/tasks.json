{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "process",
            "command": "zig",
            "args": [
                "build",
                "-Doptimize=${input:buildProfile}"
            ],
            "problemMatcher": "$zig",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ],
    "inputs": [
        {
            "id": "buildProfile",
            "description": "Build Profile",
            "type": "pickString",
            "options": [
                "Debug",
                "ReleaseSafe",
                "ReleaseFast",
                "ReleaseSmall"
            ],
            "default": "Debug"
        }
    ]
}
